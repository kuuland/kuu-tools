{
  "name": "kuu-tools",
  "version": "0.1.8",
  "description": "Kuu front-end tools",
  "main": "lib/index.js",
  "scripts": {
    "clean": "rimraf lib",
    "build": "babel src --out-dir lib --source-maps --extensions .es6,.es,.jsx,.js --copy-files",
    "watch": "babel src --watch --out-dir lib --source-maps --extensions .es6,.es,.jsx,.js --copy-files",
    "lint": "standard --verbose src/**/*.[js,jsx]",
    "fix": "standard --fix src/**/*.[js,jsx]",
    "pub": "BABEL_ENV=production npm run build",
    "prepub": "npm run clean"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kuuland/kuu-tools.git"
  },
  "keywords": [
    "kuu",
    "tools",
    "utils",
    "sdk"
  ],
  "author": "Daniel Yin <yinfxs@gmail.com>",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/kuuland/kuu-tools/issues"
  },
  "homepage": "https://github.com/kuuland/kuu-tools#readme",
  "dependencies": {
    "antd": "^3.20.1",
    "isomorphic-fetch": "^2.2.1",
    "lodash": "^4.17.11",
    "qs": "^6.7.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.5.0",
    "@babel/core": "^7.5.0",
    "@babel/preset-env": "^7.5.2",
    "babel-plugin-import": "^1.12.0",
    "babel-preset-minify": "^0.5.0",
    "husky": "^3.0.0",
    "rimraf": "^2.6.3",
    "standard": "^12.0.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint",
      "pre-push": "npm run lint"
    }
  },
  "babel": {
    "presets": [
      "@babel/preset-env"
    ],
    "plugins": [
      [
        "import",
        {
          "libraryName": "antd",
          "libraryDirectory": "es",
          "style": true
        }
      ]
    ],
    "env": {
      "production": {
        "presets": [
          "minify",
          "@babel/preset-env"
        ]
      }
    }
  }
}
